name: Upload Doc to Release

on:
  release:
    types: [published]

jobs:
  upload-asset:
    name: Upload PDF Documentation
    runs-on: ubuntu-latest

    permissions:
      contents: write

    steps:
      # 1. Récupère le code de ton dépôt (incluant le dossier Doc et le PDF)
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2. Ajoute spécifiquement ton PDF aux assets de la release
      - name: Upload PDF to Release
        uses: softprops/action-gh-release@v2
        with:
          files: Doc/documentation.pdf
